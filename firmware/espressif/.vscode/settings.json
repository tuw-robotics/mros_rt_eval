{
    "C_Cpp.intelliSenseEngine": "default",
    "idf.espIdfPath": "/opt/esp/idf",
    "idf.toolsPath": "/opt/esp",
    "files.associations": {
        "*.h": "c",
        "array": "c",
        "string": "c",
        "string_view": "c",
        "span": "c",
        "*.inc": "c",
        "cstring": "c",
        "variant": "c",
        "*.tcc": "c",
        "memory": "c",
        "format": "c",
        "future": "c",
        "istream": "c",
        "functional": "c",
        "tuple": "c",
        "utility": "c",
        "cstdint": "c",
        "chrono": "c"
    },
    "idf.flashType": "UART",
    "idf.pythonInstallPath": "/usr/bin/python",
    "python.defaultInterpreterPath": "/opt/esp/python_env/idf5.4_py3.12_env/bin/python3",
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "C_Cpp.formatting": "clangFormat",
    "editor.formatOnSave": true,
    "idf.port": "/dev/ttyUSB0"
}