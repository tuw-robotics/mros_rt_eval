{
    "version": 4,
    "configurations": [
        {
            "name": "ESP-IDF",
            "compileCommands": [
                "${workspaceFolder}/build/compile_commands.json"
            ],
            "includePath": [
                "/opt/esp/idf/components/**",
                "${workspaceFolder}/**",
                "/opt/esp/tools/riscv32-esp-elf/esp-14.2.0_20241119/riscv32-esp-elf/riscv32-esp-elf/include"
            ],
            "browse": {
                "path": [
                    "/opt/esp/idf/components",
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": true
            },
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "gcc-x86"
        }
    ]
}